{
  "name": "generator-node-bahmutov",
  "description": "My personal Yeoman generator for Node projects",
  "main": "app/index.js",
  "version": "0.0.0-development",
  "scripts": {
    "test": "npm run unit",
    "commit": "commit-wizard",
    "pretest": "npm run lint",
    "unit": "mocha --timeout 5000 app/*-spec.js",
    "pretty": "prettier-standard 'app/*.js' 'docker/*.js' 'release/*.js' 'test/*.js'",
    "prelint": "npm run pretty",
    "lint": "standard --verbose --fix app-source/*.js docker/*.js release/*.js test/*.js",
    "size": "t=\"$(npm pack .)\"; wc -c \"${t}\"; tar tvf \"${t}\"; rm \"${t}\";",
    "issues": "git-issues",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "e2e": "./test/e2e.sh",
    "e2e-typescript": "./test/e2e-typescript.sh",
    "ban": "ban",
    "license": "license-checker --production --onlyunknown --csv",
    "deps": "deps-ok && dependency-check --no-dev .",
    "pretest": "npm run transpile",
    "transpile-app": "babel app-source --out-dir app --ignore templates/* --copy-files && cp -r app-source/templates app",
    "transpile-docker": "babel docker-source --out-dir docker --ignore templates/* --copy-files && cp -r docker-source/templates docker",
    "transpile-release": "babel release-source --out-dir release --copy-files",
    "transpile": "npm run transpile-app && npm run transpile-docker && npm run transpile-release"
  },
  "files": [
    "app/*",
    "docker/*",
    "release/*",
    "!app/*-spec.js"
  ],
  "preferGlobal": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/bahmutov/generator-node-bahmutov.git"
  },
  "keywords": [
    "yeoman",
    "generator",
    "node",
    "npm"
  ],
  "author": "Gleb Bahmutov <gleb.bahmutov@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bahmutov/generator-node-bahmutov/issues"
  },
  "homepage": "https://github.com/bahmutov/generator-node-bahmutov#readme",
  "dependencies": {
    "check-more-types": "2.24.0",
    "debug": "2.6.8",
    "fixpack": "2.3.1",
    "git-remote-origin-url": "2.0.0",
    "got": "7.1.0",
    "lazy-ass": "1.6.0",
    "lodash": "4.17.4",
    "parse-github-repo-url": "1.4.0",
    "sort-object-keys": "1.1.2",
    "yeoman-generator": "1.0.1"
  },
  "config": {
    "pre-git": {
      "commit-msg": "simple",
      "pre-commit": [
        "npm run deps",
        "npm run test",
        "npm run ban"
      ],
      "pre-push": [
        "npm run e2e",
        "npm run license",
        "npm run ban -- --all",
        "npm run size"
      ],
      "post-commit": [],
      "post-merge": []
    }
  },
  "devDependencies": {
    "babel-cli": "6.24.1",
    "babel-preset-env": "1.6.0",
    "ban-sensitive-files": "1.9.0",
    "dependency-check": "2.9.1",
    "deps-ok": "1.2.0",
    "git-issues": "1.3.1",
    "github-post-release": "1.7.1",
    "license-checker": "12.1.0",
    "mocha": "3.4.2",
    "next-update-travis": "1.4.0",
    "nock": "9.0.13",
    "pre-git": "3.15.0",
    "prettier-standard": "6.0.0",
    "semantic-release": "^6.3.6",
    "sinon": "2.3.8",
    "snap-shot": "2.17.0",
    "standard": "10.0.2"
  },
  "release": {
    "generateNotes": "github-post-release"
  }
}
